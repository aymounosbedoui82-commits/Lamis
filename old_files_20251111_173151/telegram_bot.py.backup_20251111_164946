    async def week_command(self, update: Update, context: ContextTypes.DEFAULT_TYPE):
        """Ù…ÙˆØ§Ø¹ÙŠØ¯ Ø§Ù„Ø£Ø³Ø¨ÙˆØ¹ - Ø¨Ø«Ù„Ø§Ø« Ù„ØºØ§Øª"""
