    if "Chat not found" in str(context.error):
        logger.warning("ØªØ¬Ø§Ù‡Ù„ Ø®Ø·Ø£ Chat not found")
        return
    
    # ØªØ¬Ø§Ù‡Ù„ Ø£Ø®Ø·Ø§Ø¡ Conflict
    if "Conflict" in str(context.error):
