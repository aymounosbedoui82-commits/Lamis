                from time_utils import get_time_remaining_message
                has_time_utils = True
            except ImportError:
                has_time_utils = False
        
            conn = sqlite3.connect(self.agent.db.db_path)
            cursor = conn.cursor()
        
            now = datetime.now().strftime('%Y-%m-%d %H:%M:%S')
        
